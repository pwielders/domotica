From: Bram Oosterhuis <bram.oosterhuis.nl@gmail.com>
Date: Wed, 7 Sep 2022 17:35:30 +0200
Subject: [PATCH] fix error: duplicate case value

---
 source/inc/drmcompiler.h | 2 +-
 source/inc/drmdebug.h    | 4 ++--
 2 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/source/inc/drmcompiler.h b/source/inc/drmcompiler.h
index 9df884d..63660ef 100755
--- a/source/inc/drmcompiler.h
+++ b/source/inc/drmcompiler.h
@@ -623,7 +623,7 @@ typedef unsigned short          DRM_WCHAR_NATIVE;       /* 2 bytes */
 #else
 
 /* Definition of the compile time assert. */
-#define DRMCASSERT( x ) switch(0){case 0:case (x):;}
+#define DRMCASSERT( x ) /* switch(0){case 0:case (x):;} */ 
 
 /* Assertion of the alignment of a member field within a structure. */
 #define DRMALIGNASSERT( struc, member ) DRMASSERT( ( DRM_OFFSET_OF( struc, member ) ) % sizeof( DRM_WCHAR ) == 0 )
diff --git a/source/inc/drmdebug.h b/source/inc/drmdebug.h
index b855453..f3a47a5 100755
--- a/source/inc/drmdebug.h
+++ b/source/inc/drmdebug.h
@@ -73,9 +73,9 @@ ENTER_PK_NAMESPACE;
 ** So, enable this macro only when the PREfast tool is not analyzing the code.
 */
 #ifndef _PREFAST_
-    #define DRMSIZEASSERT(x,y)  \
+    #define DRMSIZEASSERT(x,y)  /* \
         {switch(0){case ((x)==(y)?0:(y)):case (y):;}} \
-        {switch(0){case ((y)==(x)?0:(x)):case (x):;}}
+        {switch(0){case ((y)==(x)?0:(x)):case (x):;}} */ 
 #else
     #define DRMSIZEASSERT(x,y)
 #endif
