/dts-v1/;
/plugin/;

/ {
    compatible = "allwinner,sun8i-h2-plus";

    fragment@0 {
        target-path = "/soc/spi@1c68000";
        __overlay__ {
            status = "okay";

            pinctrl-names = "default";
            pinctrl-0 = <&spi0_pins>;   /* use underscore, not dash */

            #address-cells = <1>;
            #size-cells = <0>;

            /* CS0 device */
            spidev0: spidev@0 {
                compatible = "spidev";
                reg = <0>;                       /* chip select 0 */
                spi-max-frequency = <10000000>;  /* 10 MHz default */
            };

            /* CS1 device */
            spidev1: spidev@1 {
                compatible = "spidev";
                reg = <1>;                       /* chip select 1 */
                spi-max-frequency = <10000000>;
            };
        };
    };
};

